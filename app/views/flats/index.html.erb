<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Simple Airbnb</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <form class="navbar-form navbar-right">
        <div><%= link_to "Add flat", new_flat_path, class: "btn btn-primary" %></div>
      </form>
    </div>
  </div>
</nav>


<div class="container">
  <h1>All our Flats (<%= @flats.length %>)</h1>
  <p>You searched for. We found 3 flats out of our 3 on our website.</p>
  <div class="row">
  <% @flats.each do |flat| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
        <div class="card-image" style="background-image: url(<%= flat.image %>);">
        </div>
        <div class="card-body">
          <h2><%= flat.name %></h2>
          <p><%= flat.address %></p>
        </div>
          <div>
            <i class="fas fa-users"></i>
            <span><%= flat.number_of_guests %></span>
            <i class="fas fa-euro-sign"></i>
            <span><%= flat.price_per_night %></span>
          </div>
          <div class="card-footer">
          <%= link_to "More info", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat) %>
          <%= link_to "Remove", flat_path(flat), method: :delete %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
